{
    "manifest_version": 3,
    "name": "Password Generator & Strength Checker",
    "version": "1.0",
    "description": "Generate secure, customizable passwords and check password strength instantly.",
    "action": {
        "default_popup": "popup.html",
        "default_title": "Generate Password",
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    },
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "permissions": [
        "clipboardWrite"
    ]
}